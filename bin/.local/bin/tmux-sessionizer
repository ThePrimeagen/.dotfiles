#!/usr/bin/env bash

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=`find ~/personal ~ ~/work -maxdepth 1 -mindepth 1 -type d | echo "$items" | fzf`
fi

if [[ -z $selected ]]; then
    exit 0
fi

if ! tmux has-session -t $selected_name; then
    tmux new-session -ds $selected_name -c $selected
fi

tmux switch-client -t $selected_name

